{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "app/**/*", "lib/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
